# Example terraform.tfvars
# Copy this file to terraform.tfvars and customize for your environment

# AWS Configuration
aws_region = "us-east-1"

# Project Metadata
project_name = "secure-foundation"
environment  = "dev"
owner        = "DevSecOps Team"

# Runtime Security Configuration
enable_runtime_security       = true
enable_cloudtrail             = true
enable_guardduty              = false # Set true if GuardDuty is permitted in your account/region
enable_security_hub           = false # Set true if Security Hub is permitted in your account/region
cloudtrail_log_retention_days = 365
vpc_flow_log_retention_days   = 365

# Networking Configuration
vpc_cidr             = "10.0.0.0/16"
az_count             = 2
public_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24"]
enable_nat_gateway   = true   # Set false for no-NAT free-tier style testing
single_nat_gateway   = false  # Set true for lower-cost dev environments

# SECURITY: Replace with your specific IP range or VPN CIDR
# NEVER use 0.0.0.0/0 for SSH access
allowed_ssh_cidr = "203.0.113.0/24"  # Example: Your office IP range

# Compute Configuration
create_bastion        = false  # Set to true if you need a bastion host
bastion_instance_type = "t3.micro"
